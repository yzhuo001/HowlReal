<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/article_snippet_photo"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/linearLayout_snippet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/article_snippet_photo"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="4dp">

        <TextView
            android:id="@+id/article_snippet_title"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:paddingBottom="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:text="title" />

        <TextView
            android:id="@+id/article_snippet_info"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:text="article info"
            android:textSize="10sp" />

    </LinearLayout>



</RelativeLayout>